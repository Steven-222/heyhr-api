# Server
PORT=3001

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DB=heyhr

# DB startup behavior
# When DB_OPTIONAL=true, server will start even if DB init fails (useful for API-only tests that don't hit DB)
# When SKIP_DB=true, server skips DB initialization entirely
DB_OPTIONAL=false
SKIP_DB=false

# JWT secrets (change in production)
JWT_SECRET=dev_access_secret_change_me
REFRESH_SECRET=dev_refresh_secret_change_me

# Token lifetimes
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Cookies
COOKIE_NAME=heyhr_refresh
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
